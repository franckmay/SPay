<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Reception"
    android:background="@color/colorPrimaryGrey50"
    android:id="@+id/backgroundreception">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/prim"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_bgf"
                android:tint="@android:color/white"
                android:src="@drawable/ic_back"/>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content" />
                <TextView
                    android:id="@+id/tv_userstatus"
                    android:layout_height="wrap_content"
                    android:text="@string/by_wintime"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content" />
            </LinearLayout >


        </LinearLayout >
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/prim">

        <ImageView android:id="@+id/bt_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_adds"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_bg"


            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal"
        android:background="@color/prim"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/prim"



        >

        <TextView
            android:id="@+id/operateur"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/operateur"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/prim"
            android:textStyle="bold"
            android:background="@drawable/bouton_rect"
            android:textAlignment="center"
            android:layout_weight="0.5"

            />
        <TextView
            android:id="@+id/numero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="@string/numero_telephone"
            android:textSize="16sp"
            android:textAlignment="center"

            android:textColor="@color/prim"
            android:textStyle="bold"
            android:background="@drawable/bouton_rect"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/codeussd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"

            android:text="@string/codeussd"
            android:textSize="16sp"
            android:textAlignment="center"

            android:textColor="@color/prim"
            android:textStyle="bold"
            android:background="@drawable/bouton_rect"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal"
        android:background="@color/prim"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvownussd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"

        />
</LinearLayout>
